@model Sanabel.Web.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-4">
    <h2>Create New Category</h2>

    <form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">💾 Save</button>
        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary ms-2">↩️ Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
